<section class="supplimental">
  <div class="wrapper">
    <a href="/users/new">点击注册</a>
    <%= form_for @user, :url => '/login', :html => { :class => 'form-horizontal' } do |f| %>
      <fieldset>

        <div class="control-group">
          <%= f.label :email,'邮箱', :class => 'control-label' %>
          <div class="controls">
            <%= f.text_field :email, :class => 'text_field' %>
          </div>
        </div>


        <div class="control-group">
          <%= f.label :password,'密码', :class => 'control-label' %>
          <div class="controls">
            <%= f.password_field :password, :class => 'text_field' %>
          </div>
        </div>


        <div class="form-actions">
          <%= f.submit '登陆', :class => 'btn btn-primary' %>
        </div>
      </fieldset>
    <% end %>
 

</section>
