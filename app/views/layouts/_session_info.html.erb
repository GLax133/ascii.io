<ul class="session-info">
  <% if current_user %>
    <li class="username">
      <%= current_user.img_link(:title => '') %>
      <%= current_user.link(:title => '') %>

      <ul class="menu">
        <li>
          <%= link_to "设置信息", edit_user_path(:id=>current_user.id), :class => "settings" %>
        </li>
        <li>
          <%= link_to "退出", logout_path, :class => "logout" %>
        </li>
      </ul>
    </li>

  <% else %>
    <li><%= link_to "登陆/注册", login_path %></li>
  <% end %>
</ul>
