

<h1>注册</h1>
<section class="supplimental">
  <div class="wrapper">

<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @user.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= f.label :用户名 %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :邮箱%><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :密码 %><br />
    <%= f.password_field :passwd %>
  </p>
  <p>
    <%= f.label :确认密码 %><br />
    <%= f.password_field :passwd_confirmation %>
  </p>
  <p class="button"><%= f.submit "注册"%></p>
<% end %>
</div>
</section>
